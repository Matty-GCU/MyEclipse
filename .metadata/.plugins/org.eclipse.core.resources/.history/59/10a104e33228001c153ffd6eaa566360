@CHARSET "UTF-8";
div{
	width: 450px;      /*将全部显示内容限制在一个特定大小的区域内*/
	height: 450px;
	margin: auto;      /*外边距若设置为auto，则要么等于0px，要么占据所有可用空间再平分放置*/
 }
h1{
    border-bottom: 2px dashed red;      /*border-bottom-width border-bottom-style border-bottom-color*/
    color: blue;
    font: 18px Georgia, sans-serif;     /*font-size font-family*/
    margin: 10px;                       /*上下左右边距10px（即外边距）*/
    padding: 35px;                      /*上下左右填充35px（相当于“内边距”）*/
	text-align:center;
}

.hoverbox a{
    cursor: pointer;        /*菜鸟教程：cursor属性定义了鼠标指针放在一个元素边界范围内时所用的光标形状*/
}
.hoverbox a .preview{
    display: none;          /*菜鸟教程：此元素不会被显示*/
    width: 200px;
    height: 150px;
}
.hoverbox a:hover .preview{
    display: block;         /*菜鸟教程：此元素将显示为块级元素，此元素前后会带有换行符*/
    position: absolute;     /*以绝对定位方式显示。即使发生层叠，位置也不会改变*/
    top: -33px;             /*相对当前位置偏移量*/
    left: -45px;
    z-index: 1;             /*z-index 属性指定一个元素的堆叠顺序。（默认值auto）*/
}
.hoverbox img{               /* 定义图像样式 */
    background: #a51;
    border-color: black;
    border-style: solid;
    border-width: 5px;
    padding: 4px;
    vertical-align: top;
    width: 100px;
    height: 75px;
}
.hoverbox li{               /* 定义列表项样式 */
    border-color: #ddd #bbb #aaa #ccc;
    border-style: solid;
    border-width: 1px;
    float: left;              /* 设置图像向左浮动 */
    display: inline;          /* 设置为行内显示 */
    margin: 3px;
    padding: 5px;   
    position: relative;       /*位置为相对的方式*/ 
}