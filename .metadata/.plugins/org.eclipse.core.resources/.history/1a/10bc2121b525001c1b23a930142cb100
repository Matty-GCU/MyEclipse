	<body>
		<form action="#" method="post">
			应付款：<input type="text" name="accountPayable">&nbsp;&nbsp;&nbsp;&nbsp;
			实际付款：<input type="text" name="actualPayment">&nbsp;&nbsp;&nbsp;&nbsp;
			<input type="submit" value="确认收款">
		</form>
		<hr>
		<%
			String accountPayable = request.getParameter("accountPayable");
			String actualPayment = request.getParameter("actualPayment");				
			if(accountPayable==null || actualPayment==null || accountPayable.equals("") || actualPayment.equals("")) {
				return;
			}
			int a = Integer.parseInt(accountPayable);
			int b = Integer.parseInt(actualPayment);
			int c = b - a;
			if(c < 0) {
				out.println("收款金额不足，请顾客重新付款！");
				return;
			}
			else if(c == 0) {
				out.println("收款成功！无需找零。");
				return;
			}
			out.println("找零：<br>");
			int[] money = {100, 50, 20, 10, 5, 1};
			for(int i = 0; i < money.length; i++) {
				int m = money[i];
				if(c / m > 0) {
					out.println(c / m + "张" + m + "元<br>");
					c = c % m;
					if(c == 0) {
						break;
					}
				}
			}
		%>
