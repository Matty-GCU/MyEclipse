		<%
			String accountPayable = request.getParameter("accountPayable");
			String actualPayment = request.getParameter("actualPayment");				
			if(accountPayable==null || actualPayment==null || accountPayable.equals("") || actualPayment.equals("")) {
				return;
			}
			int a = Integer.parseInt(accountPayable);
			int b = Integer.parseInt(actualPayment);
			int c = a - b;
			if(c < 0) {
				out.println("付款金额不足，请重新付款！");
				return;
			}
			else if(c == 0) {
				out.println("付款成功！无需找零。");
				return;
