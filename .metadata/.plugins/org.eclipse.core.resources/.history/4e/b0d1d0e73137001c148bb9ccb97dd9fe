    <%	
    	boolean b = false;
    	Cookie[] cookies = request.getCookies();
    	for(Cookie c:cookies) {
    		if(c.getName().equals("haveLogin")){
    			if(c.getValue().equals("yes")) {
    				b=true;
    			}
    		}
    	}
    	if(b==true) {
    		out.println("欢迎来访此网站！");
    	}else{
    		response.sendRedirect("Login.jsp");
    	}
    %>
</body>
