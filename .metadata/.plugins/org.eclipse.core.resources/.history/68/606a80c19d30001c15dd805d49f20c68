		<%
			Connection conn = null;
			Statement stat = null;
			try{
				Class.forName("com.mysql.cj.jdbc.Driver");
				conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/students", "root", "123456");
				stat = conn.createStatement();
				conn.setAutoCommit(false);
				stat.executeUpdate("INSERT INTO students_for_javaweb (name, id) VALUE (\'name2021\', \'id2021\')");
				stat.executeUpdate("INSERT INTO students_for_javaweb (name, id) VALUE (\'name2022\', \'id2021\')");
				conn.commit();
			}
			catch(Exception e) {
				conn.rollback();
				e.printStackTrace();
			}
			finally{
				//stat.close();
				conn.close();				
			}
