<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<html>
	<head>
		<title>Insert title here</title>
	</head>
	<body>
		<%
			boolean haveAccount = false;
			boolean havePsw = false;
			String account = null;
			Cookie[] cookies = request.getCookies();
			if(cookies != null) {
				for(Cookie c: cookies) {
					if("account".equals(c.getName())) {
						account = c.getValue();
						haveAccount = true;
						break;
					}
				}
				for(Cookie c: cookies) {
					if("psw".equals(c.getName())) {
						havePsw = true;
						break;
					}
				}
			}
			if(haveAccount == true && havePsw == true) {
				out.println("欢迎进入登录页面！");
			}
			else{
				response.sendRedirect("login.jsp";)
			}
		%>
		<form action="login.jsp">
			<input type="submit" value="返回登录页面">
		</form>
		<form action="#">
			<input type="submit" value="刷新当前页面">
		</form>
	</body>
</html>