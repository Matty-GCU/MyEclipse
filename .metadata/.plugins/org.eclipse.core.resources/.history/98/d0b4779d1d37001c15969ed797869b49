<%@ page language="java" contentType="text/html; charset=UTF-8" import="java.util.*"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Insert title here</title>
</head>
<body>
 	<%
    	String account=request.getParameter("account");
    	String password=request.getParameter("password");
    	String login=request.getParameter("login");
    	String haveLogin = request.getParameter("haveLogin");
    	if(account==null||password==null||"".equals(account)||"".equals(password)) {
    		response.sendRedirect("Login.jsp");
    	}
    	else{	
    		if(login.equals("yes")){
    			Cookie cookie1 = new Cookie("account",account);
    			Cookie cookie2 = new Cookie("password",password);
    			Cookie cookie3 = new Cookie("haveLogin",haveLogin);
    			cookie1.setMaxAge(60);
   				cookie2.setMaxAge(60);
   				cookie3.setMaxAge(60);
   				response.addCookie(cookie1);
   				response.addCookie(cookie2);
   				response.addCookie(cookie3);
   				response.sendRedirect("Welcome.jsp");
     		}
    		else {
    			Cookie cookie = new Cookie("haveLogin",haveLogin);
    			cookie.setMaxAge(5);
    			response.addCookie(cookie);
    			response.sendRedirect("Welcome.jsp");
    		}
		}
    %>
</body>
</html>