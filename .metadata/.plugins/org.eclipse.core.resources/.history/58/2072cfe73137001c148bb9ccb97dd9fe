	<%
		boolean a=false;
		boolean b=false;
		boolean cc=false;
		Cookie[] cookies=request.getCookies();
		for(Cookie c:cookies){
			if(c.getName().equals("account")){
				if(c.getValue()!=null) {
					a=true;
				}
			}
			if(c.getName().equals("password")) {
				if(c.getValue()!=null) {
					b=true;
				}
			}
			if(c.getName().equals("haveLogin")){
				if((c.getValue()).equals("yes")) {
					cc=true;
				}
			}
		}
		if(a==true&&b==true&&cc==true) {
			response.sendRedirect("Welcome.jsp");
		}
		else{
	 %>
	<form action="in.jsp">
		<table>
			<tr>
				<td>账号：</td>
				<td>
					<input type="text" name="account" size="19">
				</td>
			</tr>
			<tr>
				<td>密码：</td>
				<td>
					<input type="password" name="password">
				</td>
			</tr>
			<tr>
				<td>是否保存登录状态：</td>
				<td>
					<input type="radio" name="login" value="yes" checked>是
					<input type="radio" name="login" value="no">否
					<input type="hidden" name="haveLogin" value="<%= "yes"%>">
				</td>
			</tr>
			<tr>
				<td>
					<input type="submit" value="提交">
				</td>
				<td>
					<input type="reset" value="取消">
				</td>
			</tr>
		</table>
	</form>
	<%} %>
